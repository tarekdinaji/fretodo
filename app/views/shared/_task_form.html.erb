<div class="row mt-4">
  <h3>Create New Task</h3>
    <div class="mt-3" container-fluid">
      <%= form_with model: @task do |form| %>
        <div class="row mb-3"> 
            <%= form.label :title, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
          <%= form.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="row mb-3"> 
            <%= form.label :description, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
          <%= form.text_field :description, class: "form-control" %>
          </div>
        </div>
        <div class="row mb-3"> 
            <%= form.label :category_id, "Select Category", class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
          <%= form.collection_select :category_id,  Category::DEFAULT_CATEGORY, :id, :name, prompt: "Choose a category", class: "form-control" %>
          </div>
        </div>
        <div class="row mb-3"> 
            <%= form.label :deadline, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.date_field :deadline, class: "form-control" %>
          </div>
        </div>
        <br>
        <div>
          <%= form.submit "Create", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
</div>
